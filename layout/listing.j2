{% extends "base.j2" %}

{% from "macros.j2" import render_excerpt with context %}
        
{% block content %}

    {% if resource.node.walk_resources_sorted_by_time() %}
    <div class="text-right">
        <h3>Atom feed: <a href="{{ content_url('blog/atom.xml') }}"><i class="fa fa-rss-square"></i></a></h3>
    </div>        
    {% endif %}

    {% for res in resource.node.walk_resources_sorted_by_time() %}
        {{ render_excerpt(res) }}
    {% endfor %}

{% endblock %}